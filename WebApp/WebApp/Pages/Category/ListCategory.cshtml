@page
@using BL.Interface
@model WebApp.Pages.Category.ListCategoryModel
@{
    ViewBag.Title = "ListCategory";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var modelData = ViewBag.Model as ListCategoryModel;
}
<h2>Category list</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Parent Category</th>
            <th scope="col">View</th>
            <th scope="col">Edit</th>
        </tr>
    </thead>
    <tbody>
        @if (modelData.Categories != null && modelData.Categories.Any())
        {
            foreach (ICategory cat in modelData.Categories)
            {
                <tr>
                    <th scope="row">@cat.Id</th>
                    <td>@cat.Name</td>
                    <td>@cat.Description</td>
                    <td>@cat?.ParentCategory?.Name</td>
                    <td>@Html.ActionLink("View", "ViewCategory", "Category", new { id = cat.Id })</td>
                    <td>@Html.ActionLink("Edit", "EditCategory", "Category", new { id = cat.Id })</td>
                </tr>
            }
        }
        else
        {
            <tr>
                No category yet
            </tr>
        }
    </tbody>
</table>